# =============================================================================
# EditorConfig - Consistent coding styles across editors and IDEs
# =============================================================================
# https://editorconfig.org
# =============================================================================

root = true

# -----------------------------------------------------------------------------
# Default settings for all files
# -----------------------------------------------------------------------------
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# -----------------------------------------------------------------------------
# Python
# -----------------------------------------------------------------------------
[*.py]
indent_size = 4
max_line_length = 100

# -----------------------------------------------------------------------------
# YAML
# -----------------------------------------------------------------------------
[*.{yml,yaml}]
indent_size = 2

# -----------------------------------------------------------------------------
# JSON
# -----------------------------------------------------------------------------
[*.json]
indent_size = 2

# -----------------------------------------------------------------------------
# TOML
# -----------------------------------------------------------------------------
[*.toml]
indent_size = 4

# -----------------------------------------------------------------------------
# Markdown
# -----------------------------------------------------------------------------
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# -----------------------------------------------------------------------------
# Makefile (requires tabs)
# -----------------------------------------------------------------------------
[Makefile]
indent_style = tab
indent_size = 4

# -----------------------------------------------------------------------------
# Shell scripts
# -----------------------------------------------------------------------------
[*.sh]
indent_size = 2

# -----------------------------------------------------------------------------
# Docker
# -----------------------------------------------------------------------------
[Dockerfile*]
indent_size = 4

[docker-compose*.yml]
indent_size = 2

# -----------------------------------------------------------------------------
# HTML/CSS/JS (if any frontend is added)
# -----------------------------------------------------------------------------
[*.{html,css,js,ts,tsx,jsx}]
indent_size = 2

# -----------------------------------------------------------------------------
# SQL migrations
# -----------------------------------------------------------------------------
[*.sql]
indent_size = 2
